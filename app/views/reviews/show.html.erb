<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-1">
      <h1>Review for <%= @review.restaurant.name %>:</h1>
      <p><%= @review.content %></p>
      <p>
        <% @review.rating.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        <% (5 - @review.rating).times do %>
          <i class="far fa-star"></i>
        <% end %>
      </p>
    </div>
  </div>
</div>
