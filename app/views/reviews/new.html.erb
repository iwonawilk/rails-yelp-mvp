<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Back to list", restaurant_path(@restaurant), class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
